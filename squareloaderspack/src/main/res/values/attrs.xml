<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="SquareView">
        <attr name="squareLength" format="dimension" />
        <attr name="squareColor" format="color" />
    </declare-styleable>

    <declare-styleable name="RectangleView">
        <attr name="rectWidth" format="dimension" />
        <attr name="rectHeight" format="dimension" />
        <attr name="rectColor" format="color" />
    </declare-styleable>

    <declare-styleable name="CircleView">
        <attr name="circleRadius" format="dimension" />
        <attr name="circleColor" format="color" />
        <attr name="circleDrawOnlystroke" format="boolean" />
        <attr name="circleStrokeWidth" format="dimension" />
    </declare-styleable>

    <declare-styleable name="LShapeView">
        <attr name="baseRectWidth" format="dimension" />
        <attr name="baseRectHeight" format="dimension" />

        <attr name="verticalRectWidth" format="dimension" />
        <attr name="verticalRectHeight" format="dimension" />

        <attr name="lShapeColor" format="color" />
    </declare-styleable>

    <declare-styleable name="ZipZapLoader">
        <attr name="zipzap_squareLength" format="dimension" />

        <attr name="zipzap_firstSquareColor" format="color" />
        <attr name="zipzap_secondSquareColor" format="color" />
        <attr name="zipzap_thirdSquareColor" format="color" />
        <attr name="zipzap_forthSquareColor" format="color" />

        <attr name="zipzap_animDuration" format="integer" />
        <attr name="zipzap_startLoadingDefault" format="boolean" />
        <attr name="zipzap_fromScale" format="float" />
        <attr name="zipzap_toScale" format="float" />
    </declare-styleable>

    <declare-styleable name="WaveLoader">
        <attr name="wave_noOfDots" format="integer" />
        <attr name="wave_rectWidth" format="dimension" />
        <attr name="wave_rectHeight" format="dimension" />
        <attr name="wave_rectDistance" format="dimension" />

        <attr name="wave_isSingleColor" format="boolean" />
        <attr name="wave_rectColor" format="color" />
        <attr name="wave_rectColorsArray" format="reference" />

        <attr name="wave_animDuration" format="integer" />
        <attr name="wave_delayDuration" format="integer" />
        <attr name="wave_interpolator" format="reference" />
    </declare-styleable>

    <declare-styleable name="MusicPlayerLoader">
        <attr name="musicplayer_noOfDots" format="integer" />
        <attr name="musicplayer_rectWidth" format="dimension" />
        <attr name="musicplayer_rectHeight" format="dimension" />
        <attr name="musicplayer_rectDistance" format="dimension" />

        <attr name="musicplayer_isSingleColor" format="boolean" />
        <attr name="musicplayer_rectColor" format="color" />
        <attr name="musicplayer_rectColorsArray" format="reference" />

        <attr name="musicplayer_animDuration" format="integer" />
        <attr name="musicplayer_delayDuration" format="integer" />
        <attr name="musicplayer_interpolator" format="reference" />
    </declare-styleable>

    <declare-styleable name="RotatingSquareLoader">
        <attr name="rotatingsquare_squareSideLength" format="dimension" />
        <attr name="rotatingsquare_strokeWidth" format="dimension" />
        <attr name="rotatingsquare_sqaureColor" format="color" />
        <attr name="rotatingsquare_animDuration" format="integer" />
    </declare-styleable>

    <declare-styleable name="SquareGridLoader">
        <attr name="squaregrid_squareCount" format="integer"/>
        <attr name="squaregrid_squareLength" format="dimension" />
        <attr name="squaregrid_sqaureColor" format="color" />
        <attr name="squaregrid_animDuration" format="integer" />
        <attr name="squaregrid_animDelay" format="integer" />
        <attr name="squaregrid_interpolator" format="reference" />
    </declare-styleable>

</resources>